<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Playwrighter.MainWindow"
        Title="Playwrighter - UCL Admissions Automation"
        Width="900" Height="750"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF">
    
    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#1E3A5F" Padding="20">
            <StackPanel>
                <TextBlock Text="Playwrighter" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold"/>
                <TextBlock Text="UCL Admissions Automation Tool" 
                           Foreground="#87CEEB" 
                           FontSize="14" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel Spacing="20">
                
                <!-- File Drop Zone -->
                <Border x:Name="DropZone"
                        Background="#F8F9FA"
                        BorderBrush="#DEE2E6"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="30"
                        DragDrop.AllowDrop="True">
                    <StackPanel HorizontalAlignment="Center" Spacing="10">
                        <TextBlock Text="ðŸ“" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="DropZoneText"
                                   Text="Drag and drop your Excel file here"
                                   FontSize="16"
                                   Foreground="#6C757D"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="or"
                                   Foreground="#ADB5BD"
                                   HorizontalAlignment="Center"/>
                        <Button x:Name="BrowseButton"
                                Content="Browse Files"
                                HorizontalAlignment="Center"
                                Padding="20,10"
                                Background="#1E3A5F"
                                Foreground="White"
                                CornerRadius="4"/>
                    </StackPanel>
                </Border>
                
                <!-- Sheet Selection -->
                <Border x:Name="SheetSelectionPanel"
                        Background="#F8F9FA"
                        CornerRadius="8"
                        Padding="15"
                        IsVisible="False">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Select Worksheet:" FontWeight="SemiBold"/>
                        <ComboBox x:Name="SheetComboBox" 
                                  HorizontalAlignment="Stretch"
                                  MinWidth="300"/>
                        <Button x:Name="LoadSheetButton"
                                Content="Load Students"
                                HorizontalAlignment="Left"
                                Padding="15,8"
                                Background="#28A745"
                                Foreground="White"
                                CornerRadius="4"/>
                    </StackPanel>
                </Border>
                
                <!-- Student List -->
                <Border x:Name="StudentListPanel"
                        Background="#F8F9FA"
                        CornerRadius="8"
                        Padding="15"
                        IsVisible="False">
                    <StackPanel Spacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Students to Process:" FontWeight="SemiBold"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                                <TextBlock x:Name="StudentCountText" 
                                           Foreground="#6C757D"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        <DataGrid x:Name="StudentGrid"
                                  Height="250"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="1"
                                  BorderBrush="#DEE2E6"
                                  Background="White"
                                  RowBackground="White">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Student No" Binding="{Binding StudentNo}" Width="120"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                                <DataGridTextColumn Header="Decision" Binding="{Binding Decision}" Width="100"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="Error" Binding="{Binding ErrorMessage}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                
                <!-- Action Buttons -->
                <Border x:Name="ActionPanel"
                        Background="#F8F9FA"
                        CornerRadius="8"
                        Padding="15"
                        IsVisible="False">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Processing Options:" FontWeight="SemiBold"/>
                        <WrapPanel Orientation="Horizontal">
                            <CheckBox x:Name="ProcessAcceptsCheckBox" 
                                      Content="Process Accepts" 
                                      IsChecked="True"
                                      Margin="0,0,20,0"/>
                            <CheckBox x:Name="ProcessRejectsCheckBox" 
                                      Content="Process Rejects" 
                                      IsChecked="False"/>
                        </WrapPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button x:Name="StartButton"
                                    Content="ðŸš€ Start Processing"
                                    Padding="20,12"
                                    Background="#007BFF"
                                    Foreground="White"
                                    CornerRadius="4"
                                    FontWeight="SemiBold"/>
                            <Button x:Name="StopButton"
                                    Content="â¹ Stop"
                                    Padding="20,12"
                                    Background="#DC3545"
                                    Foreground="White"
                                    CornerRadius="4"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Status Log -->
                <Border Background="#F8F9FA"
                        CornerRadius="8"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Status Log:" FontWeight="SemiBold"/>
                            <Button x:Name="ClearLogButton"
                                    Grid.Column="1"
                                    Content="Clear"
                                    Padding="10,5"
                                    Background="#6C757D"
                                    Foreground="White"
                                    CornerRadius="4"/>
                        </Grid>
                        <TextBox x:Name="StatusLog"
                                 Height="150"
                                 IsReadOnly="True"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Background="White"
                                 BorderBrush="#DEE2E6"
                                 Padding="10"
                                 FontFamily="Consolas, Monaco, monospace"
                                 FontSize="12"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#F8F9FA" Padding="15" BorderThickness="0,1,0,0" BorderBrush="#DEE2E6">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock x:Name="FooterStatus" 
                           Text="Ready" 
                           Foreground="#6C757D"
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <Button x:Name="SettingsButton"
                            Content="âš™ Settings"
                            Padding="15,8"
                            Background="#6C757D"
                            Foreground="White"
                            CornerRadius="4"/>
                    <Button x:Name="ExitButton"
                            Content="Exit"
                            Padding="15,8"
                            Background="#343A40"
                            Foreground="White"
                            CornerRadius="4"/>
                </StackPanel>
            </Grid>
        </Border>
        
    </Grid>
</Window>
